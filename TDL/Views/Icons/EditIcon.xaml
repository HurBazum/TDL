<UserControl x:Class="TDL.Views.Icons.EditIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDL.Views.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Viewbox Height="{Binding Size}" Width="{Binding Size}">
            <Path Stroke="BlanchedAlmond" StrokeThickness="2">
                <Path.Data>
                    <PathGeometry Figures="M 5 21 L24 4 L95 80 L95 92 L82 93 L6 21 M94 97 C38 97 60 52 2 98" />
                </Path.Data>
            </Path>
        </Viewbox>
    </Grid>
</UserControl>
