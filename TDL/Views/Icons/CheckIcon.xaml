<UserControl x:Class="TDL.Views.Icons.CheckIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDL.Views.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Viewbox Width="{Binding Size}" Height="{Binding Size}">
            <Path Stroke="Beige" StrokeThickness="3">
                <Path.Data>
                    <PathGeometry Figures="M22 49 L47 18 M24 49 L0 29" />
                </Path.Data>
            </Path>
        </Viewbox>
    </Grid>
</UserControl>
