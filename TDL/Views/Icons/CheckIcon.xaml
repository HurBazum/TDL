<UserControl x:Class="TDL.Views.Icons.CheckIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDL.Views.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Viewbox Width="{Binding Size}" Height="{Binding Size}">
            <Path Stroke="{Binding Color}" StrokeThickness="3">
                <Path.Data>
                    <!-- m l(x2), m l(x2)-->
                    <PathGeometry Figures="M28.6 40 L47 18 M30.6 40 L22 32.59 M21 41 L41 18 M22.1 40 L10.8 30" />
                </Path.Data>
            </Path>
        </Viewbox>
    </Grid>
</UserControl>
