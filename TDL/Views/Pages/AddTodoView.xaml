<UserControl x:Class="TDL.Views.Pages.AddTodoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDL.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="Bisque"
             DataContext="{Binding AddTodoViewModel, Source={StaticResource Locator}}">
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold" Margin="10" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding TodoText, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="12" Padding="4"  />
            <TextBlock Text="{Binding Message}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add" Height="30" Width="100" Margin="10" Command="{Binding AddTodoItemCmd}" />
                <Button Content="Cancel" Height="30" Width="100" Margin="0 0 10 0" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
